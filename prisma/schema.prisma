generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  email    String    @unique
  password String
  sessions Session[]
  Post     Post[]
  comments Comment[]
}

model Session {
  id           String @id
  userId       String
  user         User   @relation(fields: [userId], references: [id])
  accessToken  String
  refreshToken String
}

model Post {
  id       String    @id
  userId   String
  user     User      @relation(fields: [userId], references: [id])
  title    String
  content  String
  comments Comment[]
}

model Comment {
  id      String @id
  postId  String
  post    Post   @relation(fields: [postId], references: [id])
  userId  String
  user    User   @relation(fields: [userId], references: [id])
  content String
}
